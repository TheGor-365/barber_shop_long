<div class="jumbotron mt-4">
  <form action='/login/attempt' method='post' class="form-inline">
    <div class="form-group mx-sm-3 mb-2">
      <label for="user" class="mr-4"><h3>Log in:</h3></label>
      <input id="user" class="form-control" type="text" name='username' placeholder="username" autofocus>
    </div>
    <div class="form-group mx-sm-3 mb-2">
      <input type="password" class="form-control" name='password' placeholder="password">
    </div>

    <button type="submit" class="btn btn-primary mb-2">Confirm</button>
  </form>
</div>
